<Page x:Class="Diplomski.CustomComponents.PrimljeniZahteviPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Diplomski.CustomComponents"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PrimljeniZahteviPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <DataGrid x:Name="dataGrid" Grid.Row="0">

        </DataGrid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1" >
            <Button x:Name="btn_prihvati"  Width="100" Height="30" Click="btn_prihvati_Click" Margin="0,0,10,0">Prihvati</Button>
            <Button x:Name="btn_odbij"  Width="100" Height="30" Click="btn_odbij_Click">Odbij</Button>
        </StackPanel>
        
    </Grid>
</Page>
